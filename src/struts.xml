<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="day5" extends="json-default">

        <action name="playGame" class="com.lanou3g.action.CitySelectAction" method="playGame">
            <result name="success">/game.jsp</result>
        </action>
        <action name="getServer" class="com.lanou3g.action.CitySelectAction" method="getServer">

        </action>

        <!--使用Struts2的方式返回json数据-->
        <action name="getServerJson" class="com.lanou3g.action.CitySelectAction" method="getServerJson">
            <result name="success" type="json">
                <!--指定需要转化为json数据的数据类对象-->
                <param name="root">servers</param>
            </result>
        </action>
    </package>
</struts>